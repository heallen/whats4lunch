<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/navbar') %>

    <div class="pageContent">

      <div class="recipesContainer">
        <h2>Recipes</h2>

        <% if(pageNum == 1) { %>
          <button style="display: none" id="prev-btn" class="btn btn-sm btn-secondary">Previous Page</button>
          <button id="next-btn" class="btn btn-sm btn-secondary">Next Page</button>
        <% } else { %>
          <button id="prev-btn" class="btn btn-sm btn-secondary">Previous Page</button>
          <button id="next-btn" class="btn btn-sm btn-secondary">Next Page</button>
        <% } %>

        <br><br>
        <div class="card-columns">
          <% recipes.forEach(function(recipe) { %>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><a href=<%= "/recipes/" + recipe.ID %>><%= recipe.NAME %></a></h5>
                <div class="card-text">
                  <div>
                    <%= recipe.DESCRIPTION %>
                  </div>

                  <div>
                   <em>Rating:</em> <%= recipe.RATING %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>   
        </div>
        
      </div>
    </div>
    <script src="/scripts/pagination.js"></script>
</body>