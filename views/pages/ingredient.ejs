<head>
    <%- include('../partials/head') %>
    <style>
        #nutrition-table, #recipes-list {
            max-height: 100%;
            overflow-y: auto;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

    <div class="pageContent">

        <h1><%= ingredient.NAME %></h1>
        <div class="row">
            <div id="nutrition-container" class="col-sm-6">
                <h2 id="nutrition-header">Nutrition Information (per 100g)</h2>
                <div id="nutrition-table">
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th scope="col">Item</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Units</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Water</td>
                                <td><%= ingredient.WATER %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Calories</td>
                                <td><%= ingredient.CALORIES %></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Protein</td>
                                <td><%= ingredient.PROTEIN %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Total Fat</td>
                                <td><%= ingredient.TOTAL_FAT %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Saturated Fat</td>
                                <td><%= ingredient.SATURATED_FAT %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Monounsaturated Fat</td>
                                <td><%= ingredient.MONOUNSATURATED_FAT %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Polyunsaturated Fat</td>
                                <td><%= ingredient.POLYUNSATURATED_FAT %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Carbohydrates</td>
                                <td><%= ingredient.CARBOHYDRATES %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Sugar</td>
                                <td><%= ingredient.SUGAR %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Sodium</td>
                                <td><%= ingredient.SODIUM %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Fiber</td>
                                <td><%= ingredient.FIBER %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Calcium</td>
                                <td><%= ingredient.CALCIUM %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Iron</td>
                                <td><%= ingredient.IRON %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Cholesterol</td>
                                <td><%= ingredient.CHOLESTEROL %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Potassium</td>
                                <td><%= ingredient.POTASSIUM %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Zinc</td>
                                <td><%= ingredient.ZINC %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Copper</td>
                                <td><%= ingredient.COPPER %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Magnesium</td>
                                <td><%= ingredient.MAGNESIUM %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Ash</td>
                                <td><%= ingredient.ASH %></td>
                                <td>Grams</td>
                            </tr>
                            <tr>
                                <td>Phosphorus</td>
                                <td><%= ingredient.PHOSPHORUS %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Manganese</td>
                                <td><%= ingredient.MANGANESE %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Selenium</td>
                                <td><%= ingredient.SELENIUM %></td>
                                <td>Micrograms</td>
                            </tr>
                            <tr>
                                <td>Vitamin C</td>
                                <td><%= ingredient.VITAMIN_C %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Thiamin</td>
                                <td><%= ingredient.THIAMIN %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Riboflavin</td>
                                <td><%= ingredient.RIBOFLAVIN %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Niacin</td>
                                <td><%= ingredient.NIACIN %></td>
