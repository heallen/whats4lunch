                                <td><%= ingredient.VITAMIN_B6 %></td>
                                <td>Milligrams</td>
                            </tr>
                            <tr>
                                <td>Folate Total</td>
                                <td><%= ingredient.FOLATE_TOTAL %></td>
                                <td>Micrograms</td>
                            </tr>
                            <tr>
                                <td>Folic Acid</td>
                                <td><%= ingredient.FOLIC_ACID %></td>
                                <td>Micrograms</td>
                            </tr>
                            <tr>
                                <td>Food Folate</td>
                                <td><%= ingredient.FOOD_FOLATE %></td>
                                <td>Micrograms</td>
                            </tr>
                            <tr>
                                <td>Folate DFE</td>
                                <td><%= ingredient.FOLATE_DFE %></td>
                                <td>Micrograms</td>
                            </tr>
                            <tr>
                                <td>Vitamin B12</td>
                                <td><%= ingredient.VITAMIN_B12 %></td>
                                <td>Micrograms</td>
                            </tr>
                            <tr>
                                <td>Vitamin A</td>
                                <td><%= ingredient.VITAMIN_A %></td>
