<style>
  nav a {
    color: black;
  }

  nav a:hover{
    text-decoration: none;
  }
</style>

 <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Whats4Lunch</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/recipes">Recipes</a>
      <a class="nav-item nav-link" href="/ingredients">Ingredients</a>
      <a class="nav-item nav-link" href="/categories">Categories</a>
      <% if(name) { %>
        <a class="nav-item nav-link" href="/favorites">Favorites</a>
      <% } %>
      <a class="nav-item nav-link" href="/search">Search</a>
    </div>
  </div>
  <% if(!name) { %>
    <a href="/signup">
      <button 
      class="nav-item nav-link btn"
      id="signup-btn">
        Sign Up
      </button>
    </a>
    <a href="/login">
      <button 
      class="nav-item nav-link btn"
      style="margin: 0px 20px"
      id="login-btn">
        Log In
      </button>
    </a>
  <% } else { %>
    <div>
      Hello, <%= name %>
    </div>
    <a href="/logout">
      <button 
      class="nav-item nav-link btn"
      style="margin: 0px 20px"
      id="logout-btn">
        Log Out
      </button>
    </a>
  <% } %>
</nav>